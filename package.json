{
  "name": "nuxt-ts",
  "version": "0.1.0",
  "description": "My swell Nuxt.js project",
  "author": "m-mitsuhide",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "nuxt-ts",
    "dev:api": "aspida --watch",
    "dev:mock": "axios-mock-server --watch",
    "generate": "npm run build:api && nuxt-ts generate",
    "build:api": "aspida --build",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{*(s)css,vue}\"",
    "lint:fix": "npm run lint:script -- --fix && npm run lint:style -- --fix",
    "typecheck": "tsc --noEmit"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "@nuxtjs/eslint-config-typescript",
      "plugin:nuxt/recommended",
      "plugin:prettier/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/standard",
      "prettier/unicorn",
      "prettier/vue"
    ],
    "globals": {
      "$nuxt": "readonly"
    },
    "rules": {
      "no-unused-vars": "off"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-twbs-bootstrap/scss",
      "stylelint-config-prettier"
    ]
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.2.10",
    "@nuxtjs/axios": "^5.8.0",
    "@nuxtjs/dotenv": "^1.4.1",
    "nuxt": "^2.10.2",
    "nuxt-property-decorator": "^2.5.0",
    "vuex-class-component": "^2.2.1"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.3.10",
    "@nuxtjs/eslint-config-typescript": "^1.0.0",
    "@nuxtjs/stylelint-module": "^3.1.1",
    "@types/faker": "^4.1.8",
    "aspida": "^0.7.0",
    "axios-mock-server": "^0.16.3",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-nuxt": ">=0.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^7.0.0",
    "stylelint-config-twbs-bootstrap": "^1.0.0"
  }
}
